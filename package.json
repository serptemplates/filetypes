    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitest/coverage-v8": "^4.0.6",
    "typescript": "^5.9.2",
