{
  "name": "serp-filetypes",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:url": "vitest run tests/url*.test.ts",
    "test:links": "vitest run tests/internal-urls.test.ts",
    "test:watch": "vitest",
    "validate:categories": "node scripts/validate-category-urls.mjs",
    "validate:dates": "node scripts/validate-dates.mjs",
    "validate:filetypes": "node scripts/validate-filetypes.mjs",
    "report:coverage": "node scripts/report-field-coverage.mjs",
    "report:db-content": "node scripts/report-db-content.mjs",
    "validate": "pnpm run validate:categories && pnpm run validate:dates && pnpm run validate:filetypes",
    "fix:dates": "node scripts/fix-dates.mjs",
    "fix:dates:write": "node scripts/fix-dates.mjs --write",
    "db:migrate": "node scripts/db/migrate-sqlite.mjs",
    "db:seed:filetypes": "node scripts/db/seed-filetypes.mjs",
    "db:seed:mime": "node scripts/db/seed-mime.mjs",
    "db:seed:all": "pnpm run db:seed:filetypes && pnpm run db:seed:mime && pnpm run db:seed:refs",
    "db:seed:codecs": "node scripts/db/seed-codecs.mjs",
    "db:seed:codecs:impls": "node scripts/db/seed-ffmpeg-impls.mjs",
    "db:seed:codecs:impl-docs": "node scripts/db/seed-ffmpeg-impl-docs.mjs",
    "db:seed:matrix": "node scripts/db/seed-matrix.mjs",
    "db:update:codecs:impl-desc": "node scripts/db/update-ffmpeg-impl-desc.mjs",
    "db:seed:all:plus": "pnpm run db:seed:filetypes && pnpm run db:seed:mime && pnpm run db:seed:refs && pnpm run db:seed:codecs",
    "db:seed:refs": "node scripts/db/seed-references.mjs",
    "db:link:codecs": "node scripts/db/link-codec-impls.mjs",
    "clean": "node scripts/clean-generated.mjs",
    "check:internal": "node scripts/check-internal-urls.mjs",
    "check:links": "node scripts/link-check.mjs",
    "clean:deep": "node scripts/clean-generated.mjs --deep --wipe-files"
  },
  "dependencies": {
    "@serp-filetypes/app-core": "workspace:*",
    "@serp-filetypes/ui": "workspace:*",
    "urlcat": "^3.1.0",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.541.0",
    "mime-db": "^1.54.0",
    "next": "^15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "next-sitemap": "^4.2.3",
    "linkinator": "^4.0.1",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitest/coverage-v8": "^4.0.6",
    "typescript": "^5.9.2",
    "vitest": "^4.0.6",
    "zod": "^3.25.76"
  }
}
